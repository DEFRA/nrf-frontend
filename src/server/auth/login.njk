{% extends "layouts/page.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ pageTitle }}</h1>

      <p class="govuk-body">
        You need to sign in to access this service.
      </p>

      <p class="govuk-body">
        You will be redirected to DEFRA Customer Identity to sign in or create an account.
      </p>

      <a href="{{ loginUrl }}" role="button" draggable="false"
         class="govuk-button govuk-button--start" data-module="govuk-button">
        Sign in
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg"
             width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
        </svg>
      </a>
    </div>
  </div>
{% endblock %}
