{% extends "layouts/page.njk" %}

{% block pageTitle %}{% if validationErrors %}Error: {% endif %}{{ pageTitle }}{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
    text: "Back",
    href: backLink
}) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form method="post" novalidate>
            {% include "partials/csrf-token.njk" %}

            {% if validationErrors %}
            {{ govukErrorSummary({
                titleText: "There is a problem",
                errorList: validationErrors.summary
            }) }}
            {% endif %}

            {{ govukInput({
                label: {
                    text: pageHeading,
                    classes: "govuk-label--l",
                    isPageHeading: true
                },
                hint: {
                    text: "A unit is a house, a HMO with 6 or less residents, a flat within a block of flats or a caravan or mobile home on a site."
                },
                name: "residentialBuildingCount",
                type: "number",
                classes: "govuk-input--width-5",
                inputmode: "numeric",
                pattern: "[0-9]*",
                value: formSubmitData.residentialBuildingCount,
                errorMessage: validationErrors.messagesByFormField.residentialBuildingCount
            }) }}

            {{ govukButton({
                text: "Continue"
            }) }}

        </form>
    </div>
</div>
{% endblock %}
