# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Session Configuration
SESSION_CACHE_ENGINE=memory

# Redis Configuration (when SESSION_CACHE_ENGINE=redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_TLS_ENABLED=false

# DEFRA Identity Authentication
# Set to true to enable DEFRA Customer Identity authentication
ENABLE_DEFRA_ID=false

# DEFRA Identity Configuration (required when ENABLE_DEFRA_ID=true)
# Get these values from the DEFRA Identity team
DEFRA_ID_WELL_KNOWN_URL=
DEFRA_ID_CLIENT_ID=
DEFRA_ID_CLIENT_SECRET=
DEFRA_ID_REDIRECT_URL=http://localhost:3000/auth/sign-in-oidc
DEFRA_ID_SERVICE_ID=
DEFRA_ID_POLICY=b2c_1a_cui_cpdev_signupsignin

# Cookie Configuration
# Generate a secure password with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
COOKIE_PASSWORD=your-secure-cookie-password-at-least-32-characters-long-abc123
COOKIE_IS_SECURE=false

# Logging
LOG_LEVEL=info
